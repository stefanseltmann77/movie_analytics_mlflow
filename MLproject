name: MovieAnalytics

conda_env: movie_analytics/conf/conda_env.yml

entry_points:
  main:
    parameters:
      target-feature: {type: string, default: "is_oscar_winner"}
      term-confidence: {type: float, default: 0.01}
      use-tfidf: {type: bool, default: True}
      max-depth: {type: float, default: 3}
      n-estimators: {type: int, default: 10}
    command: "python run_bow_classifier.py
                --target-feature={target-feature}
                --term-confidence={term-confidence}
                --use-tfidf={use-tfidf}
                --n-estimators={n-estimators}
                --max-depth={max-depth}"
